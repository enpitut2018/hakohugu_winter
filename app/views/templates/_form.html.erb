<%= form_for @template do |f| %>
<div class="form-group">
  <%= f.label :title, "アシスタント名" %>
  <%= f.text_field :title, class: 'form-control'%>
</div>

<div class="form-group">
  <%= f.label :topic, "概要" %>
  <p>
    誰がどんな目的で何をすることを助けるアシスタントなのかの説明
  </p>
  <%= f.text_field :topic, class: 'form-control'%>
</div>

<div class="form-group">
  <%= f.label :category_id, "カテゴリ" %>
  <%= f.collection_select(:category_id, Category.all, :id, :name, {}, {:class => "custom-select"}) %>
</div>

<h3>質問</h3>
<div id="questions">
  <%= f.fields_for :questions do |question| %>
  <%= render 'question_fields', f: question %>
<% end %>
<div class="links">
  <%= link_to_add_association '+質問を追加', f, :questions, class: 'btn btn-light'%>
</div>
</div>

<div class="actions">
<%= f.submit @submit, class: "btn btn-primary"%>
</div>

<% end %>